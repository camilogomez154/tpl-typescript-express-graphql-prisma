{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./",
    "target": "es5",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "paths": {
      "@library/prisma/*": [
        "libs/prisma/src"
      ]
    },
  },
  "exclude": [
    "node_modules",
    "dist",
  ]
}